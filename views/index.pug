extend layout.pug

block content
	body
		div.introduce
			a(href="/")
				h1.btn.txt.title(href="/")
					| BAEK. <br> NOTHING
			p.txt.subtext
				| 0 에서 출발해,
				br
				| 단서와 논리를 갖고
				br
				| 스스로 해를 찾아
				br
				| 빠르게 100까지 도달해내는
				br
				| Degital Creator
				br
				| 100 & 0
		div.introduce.bottom
			div.icons
				a.btn.icon.fa.fa-instagram(href="https://www.instagram.com/baek.nothing/?hl=ko")
				a.btn.fa(href="/introduce")
					i.icon.material-icons person
			p.txt.mail baeknothing@gmail.com
		div.contents
			- for (var i = 0; i < unitycount; i++){
				div.content(onclick="location.href ='/content?category=unity&name="+unitylist[i]+"'" style="background-image : url('resource/imgs/thumbnails/unity/"+ unitylist[i] +".png')")
					div.content_black=unitylist[i]
			- }
			- for (var i = 0; i < designcount; i++){
				div.content(onclick="location.href ='/content?category=design&name="+designlist[i]+"'" style="background-image : url('resource/imgs/thumbnails/design/"+ designlist[i] +".png')")
					div.content_black=designlist[i]
			- }
			- for (var i = 0; i < webcount; i++){
				div.content(onclick="location.href ='/content?category=web&name="+weblist[i]+"'" style="background-image : url('resource/imgs/thumbnails/web/"+ weblist[i] +".png')")
					div.content_black=weblist[i]
			- }
		div.txt.btn.see_more more
			div.see_more_icon
		div.loading
			img.loading-image(src="resource/imgs/rocket.gif", alt="loading")
