extends ../ani.pug

block content
  script.
    $('.square').each(function(){
        var x = Math.floor(Math.random() * 6);
        var y = Math.floor(Math.random() * 6);
        //console.log(x);
      $(this).css({
        transform: 'translateX('+ x * 30 +'px) translateY('+ y * 30 +'px)'
      });
    });
    var anime = setInterval(() => {
      $('.square').each(function(){
        
          var x = Math.floor(Math.random() * 6);
          var y = Math.floor(Math.random() * 6);
          //console.log(x);
        $(this).css({
          transform: 'translateX('+ x * 30 +'px) translateY('+ y * 30 +'px)'
        });
      });
    }, 1000);
  style.
    .load{
        position: absolute;
        width: 200px;
        height: 200px;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }
